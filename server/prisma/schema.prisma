generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your database models here and run `prisma db push` to apply them to the database.
model User {
  id       String   @id @default(uuid())
  name     String   
  email    String   @unique 
  password String
  role     Role
  created_at DateTime @default(now())

  // tests        Test[]       @relation("TeacherTests")
  // submissions  Submission[] @relation("StudentSubmissions")
}

enum Role {
  student
  teacher
}

